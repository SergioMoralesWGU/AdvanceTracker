<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_assessment_courseId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="" />

    <TextView
        android:id="@+id/tv_assessment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="" />

    <TextView
        android:id="@+id/tv_assessment_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="" />

    <TextView
        android:id="@+id/tv_assessment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="" />

    <ImageButton
        android:id="@+id/delete_assessment_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:contentDescription="delete"
        app:srcCompat="@drawable/ic_delete_black_24dp" />

    <ImageButton
        android:id="@+id/edit_assessment_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="28dp"
        app:srcCompat="@android:drawable/ic_menu_edit" />


</LinearLayout>